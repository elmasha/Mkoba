<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="5dp">



    <TextView
        android:id="@+id/dia_close"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_close"/>


    <TextView
        android:id="@+id/mpesa_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:text="Mpesa Payment"
        android:layout_below="@id/dia_close"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/D_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGrey"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@id/mpesa_lable"
        android:layout_centerHorizontal="true"
        android:text="Elmasha" />

    <TextView
        android:id="@+id/D_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/D_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="90029020"
         />


    <View
        android:id="@+id/V34"
        android:layout_width="270dp"
        android:layout_height="6dp"
        android:layout_below="@id/D_id"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:background="#C4C4C4" />


    <EditText
        android:id="@+id/Input_number"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/V34"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_phone"
        android:drawableTint="@color/colorGrey"
        android:hint="Phone number"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="23dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stk_push"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Input_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Confirm "
        android:textAllCaps="false"
        android:textSize="20dp"
        android:background="@drawable/grey_btn"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorAccent" />


  </RelativeLayout>

</androidx.cardview.widget.CardView>