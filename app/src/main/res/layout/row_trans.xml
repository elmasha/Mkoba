<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/V_title"
            android:text="Description"
            android:textSize="18dp"
            android:textColor="#000"
            android:ellipsize="end"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp" />



        <TextView
            android:id="@+id/V_desc"
            android:text="Description"
            android:textSize="14dp"
            android:textColor="@color/colorGrey"
            android:ellipsize="end"
            android:maxLines="3"
            android:minLines="2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/V_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp" />


        <RelativeLayout
            android:id="@+id/statu_layout"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progress_status"
                android:layout_width="40dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:progressDrawable="@drawable/pg_blue"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/V_status_percent"
                android:layout_width="wrap_content"
                android:text="30%"
                android:visibility="invisible"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginTop="22dp"
                android:textAlignment="center"
                android:background="@drawable/background_blue"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/V_rcptNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statu_layout"
            android:layout_marginRight="12dp"
            android:textAlignment="textEnd"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:text="073232238"
            android:textSize="16dp"
            android:inputType="phone"
            android:textColor="@color/colorGrey"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/V_deadline"
            android:layout_below="@id/V_desc"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:text=""
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp" />

        <TextView
            android:id="@+id/V_amount"
            android:layout_width="wrap_content"
            android:text="10,0000"
            android:layout_marginTop="8dp"
            android:textSize="20dp"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/V_pay_Id"
            android:textColor="#E930B5"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/V_date"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/V_rcptNo"
            android:layout_marginTop="5dp"
            android:layout_marginRight="12dp"
            android:text=""
            android:textStyle="bold"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/V_pay_Id"
            android:layout_width="wrap_content"
            android:text="#687768989"
            android:textAlignment="textEnd"
            android:layout_marginTop="5dp"
            android:layout_below="@id/V_desc"
            android:textStyle="bold"
            android:textColor="@color/colorGrey"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/V_delete"
            android:layout_width="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:drawableRight="@drawable/ic_delete"
            android:layout_below="@id/V_pay_Id"
            android:textStyle="bold"
            android:textColor="@color/colorGrey"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp" />



        <TextView
            android:id="@+id/V_cats"
            android:layout_width="wrap_content"
            android:textAlignment="textEnd"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            android:layout_below="@id/V_pay_Id"
            android:textStyle="bold"
            android:text=""
            android:textColor="@color/colorGrey"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>